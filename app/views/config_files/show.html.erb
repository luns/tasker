<p id="notice"><%= notice %></p>
<!--<div class="alert alert-success">...</div>-->



<div class="row">
  <div class="col-sm-10">
    <div class="panel panel-default">
      <div class="panel-heading" data-toggle="collapse" data-target="#file_text_panel">
        <div id="file_text"><h5><%= @config_file.name %> <span class="caret"></span></h5></div>
      </div>
      <div id="file_text_panel" class="collapse">
        <div class="panel-body">
    <pre>
      <code>
        <%= @config_file.text %>
      </code>
    </pre>
        </div>
      </div>
    </div>

    <!-- комментарии - старт -->
    <div class="panel panel-default">
      <div class="panel-heading" data-toggle="collapse" data-target="#comments_panel">
        <div id="comments"><h5>комментарии<span class="caret"></span></h5></div>
      </div>
      <div id="comments_panel" class="collapse">
        <div class="panel-body">

          <form>
            <input name="title" type="text" placeholder="Title?" />
            <textarea name="content" data-provide="markdown" rows="10"></textarea>

            <hr/>
            <button type="submit" class="btn">Submit</button>
          </form>

        </div>
      </div>
    </div>
    <!-- -->



  </div>
  <div class="col-sm-2">
    <div data-spy="affix" data-offset-top="60" data-offset-bottom="200">


      <ul class="list-group">
        <li class="list-group-item">
        <%= link_to 'Edit', edit_config_file_path(@config_file) %> |
        <%= link_to 'Back', config_files_path %>
        </li>
        <li class="list-group-item">
          <span class="badge"><%= @config_file.config %></span>
          Конфигурация
        </li>
        <li class="list-group-item">
          <span class="badge"><%= @config_file.object_type %></span>
          Тип объекта
        </li>
      </ul>


    </div>
  </div>
</div>


